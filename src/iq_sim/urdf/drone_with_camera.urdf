<?xml version="1.0"?>
<robot name="drone_with_camera" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://iq_sim/models/drone_with_camera/meshes/drone.dae"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_link_to_world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <link name="depth_camera_link">
    <visual>
      <geometry>
        <mesh filename="package://iq_sim/models/drone_with_camera/meshes/depth_camera.dae"/>
      </geometry>
    </visual>
  </link>

  <joint name="depth_camera_mount" type="fixed">
    <parent link="base_link"/>
    <child link="depth_camera_link"/>
  </joint>
</robot>
